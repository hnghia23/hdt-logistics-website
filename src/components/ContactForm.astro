<form
    action="https://formspree.io/f/your-id"
    method="POST"
    class="space-y-4 max-w-xl"
>
    <div>
        <label class="block text-sm">Tên</label>
        <input name="name" required class="w-full border p-3 rounded" />
    </div>
    <div>
        <label class="block text-sm">Email</label>
        <input
            name="email"
            type="email"
            required
            class="w-full border p-3 rounded"
        />
    </div>
    <div>
        <label class="block text-sm">Tin nhắn</label>
        <textarea name="message" rows="5" class="w-full border p-3 rounded"
        ></textarea>
    </div>
    <div>
        <button
            type="submit"
            class="px-4 py-2 rounded text-white bg-hdtGreen hover:bg-hdtLight"
        >
            Gửi
        </button>
    </div>
</form>
