---
const { title, description, image, href } = Astro.props;
---

<div class="bg-white rounded-xl shadow-sm group">
    <div class="h-40 bg-gray-100 flex items-center justify-center">
        <img
            src={image}
            alt={title}
            class="w-full h-full object-cover transition-transform duration-300"
        />
    </div>

    <div class="p-6 flex flex-col">
        <h3 class="font-semibold mb-2">{title}</h3>

        <p class="text-sm muted mb-4">
            {description}
        </p>

        {
            href && (
                <a
                    href={href}
                    class="mt-auto inline-flex items-center text-sm font-medium
           text-red-600 no-underline
           transition-colors duration-300 ease-out
           hover:text-blue-600"
                >
                    XEM CHI TIáº¾T{" "}
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="2"
                        stroke="currentColor"
                        class="ml-1 h-4 w-4 transition-transform duration-300
           group-hover:translate-x-1"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M9 5l7 7-7 7"
                        />
                    </svg>
                </a>
            )
        }
    </div>
</div>
