---
const { title, text, icon } = Astro.props;
---

<div class="p-6 border rounded-lg bg-white shadow-sm">
    <div class="flex items-center gap-4">
        <div
            class="h-12 w-12 flex items-center justify-center rounded" 
            style="background-color: rgba(63,174,73,0.12); color: var(--hdt-dark);"
        >
            {icon}
        </div>
        <h3 class="font-semibold">{title}</h3>
    </div>
    <p class="mt-4 text-sm muted">{text}</p>
</div>
