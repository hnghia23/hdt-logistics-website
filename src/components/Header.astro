<div
    id="headerTop"
    class="fixed inset-x-0 top-0 z-50
         h-8 bg-gradient-to-r from-hdtDark to-hdtBlue text-sm text-white
         transition-transform duration-300"
>
    <div class="mx-auto flex h-full max-w-7xl gap-6 px-5">
        <a class="flex items-center gap-2">
            <img src="/icons/mail.svg" class="h-4 w-4" />
            <span class="hidden sm:inline text-sm text-white">
                skylanelogisticsllc@gmail.com
            </span>
        </a>

        <a class="flex items-center gap-2">
            <img src="/icons/phone.svg" class="h-4 w-4" />
            <span class="text-sm text-white">0941 038 126</span>
        </a>
    </div>
</div>

<!-- HEADER MAIN -->
<div
    id="headerMain"
    class="fixed top-8 inset-x-0 z-40
         h-24 bg-white shadow border-b-2 border-hdtBlue
         transition-[top] duration-300"
>
    <div
        class="container-max mx-auto h-full
           flex items-center justify-between
           px-6"
    >
        <!-- Logo -->
        <a href="/" class="flex items-center">
            <img
                src="/logo.png"
                alt="Skylane Logistics"
                class="h-14 w-auto object-contain"
            />
        </a>

        <!-- Desktop Navigation -->
        <nav
            class="hidden md:flex items-center gap-8
             text-md font-medium text-gray-700"
        >
            <!-- CHUYỂN PHÁT NHANH -->
            <div class="relative group">
                <a
                    href="#"
                    class="flex items-center gap-1 font-semibold text-black hover:text-hdtBlue hover:border-b-2 hover:border-hdtBlue"
                >
                    CHUYỂN PHÁT NHANH
                    <svg
                        class="w-4 h-4 transition-transform duration-200 group-hover:rotate-180"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M19 9l-7 7-7-7"></path>
                    </svg>
                </a>

                <!-- Dropdown card -->
                <div
                    class="absolute left-0 top-full mt-2 w-56 rounded-xl border bg-white shadow-lg
               opacity-0 invisible group-hover:opacity-100 group-hover:visible
               transition-all duration-200 z-50"
                >
                    <!-- Item -->
                    <a
                        href="/chuyen-phat-nhanh/vn-quoc-te"
                        class="group flex items-center gap-2 px-4 py-3
                   font-semibold rounded-lg
                   transition-all duration-200 ease-out
                   hover:bg-hdtBlue hover:text-white
                   hover:translate-x-[1px] hover:-translate-y-[1px]
                   active:scale-[0.98]"
                    >
                        Việt Nam → Quốc tế
                    </a>

                    <a
                        href="/chuyen-phat-nhanh/tq-quoc-te"
                        class="group flex items-center gap-2 px-4 py-3
                   font-semibold rounded-lg
                   transition-all duration-200 ease-out
                   hover:bg-hdtBlue hover:text-white
                   hover:translate-x-[1px] hover:-translate-y-[1px]
                   active:scale-[0.98]"
                    >
                        Trung Quốc → Quốc tế
                    </a>

                    <a
                        href="/chuyen-phat-nhanh/quoc-te-vn"
                        class="group flex items-center gap-2 px-4 py-3
                   font-semibold rounded-lg
                   transition-all duration-200 ease-out
                   hover:bg-hdtBlue hover:text-white
                   hover:translate-x-[1px] hover:-translate-y-[1px]
                   active:scale-[0.98]"
                    >
                        Quốc tế → Việt Nam
                    </a>
                </div>
            </div>

            <!-- DỊCH VỤ - Mega Menu -->
            <div class="relative group">
                <a
                    href="/services"
                    class="flex items-center gap-1 font-semibold text-black hover:text-hdtBlue hover:border-b-2 hover:border-hdtBlue"
                >
                    DỊCH VỤ
                    <svg
                        class="w-4 h-4 transition-transform duration-200 group-hover:rotate-180"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M19 9l-7 7-7-7"></path>
                    </svg>
                </a>

                <div
                    class="absolute left-1/2 -translate-x-1/2 top-full mt-4 w-[900px]
               bg-white border shadow-xl rounded-xl p-6
               opacity-0 invisible group-hover:opacity-100 group-hover:visible
               transition-all duration-200 z-50"
                >
                    <div class="grid grid-cols-4 gap-6 text-sm">
                        <!-- PHỔ BIẾN NHẤT -->
                        <div class="space-y-3">
                            <h4 class="font-semibold text-black">
                                PHỔ BIẾN NHẤT
                            </h4>

                            <ul class="space-y-1">
                                <li>
                                    <a
                                        href="/dich-vu/gui-hang-di-my"
                                        class="group flex items-center rounded-lg px-3 py-2
                                   font-medium text-gray-700
                                   transition-all duration-200 ease-out
                                   hover:bg-hdtBlue hover:text-white
                                   hover:translate-x-[1px] hover:-translate-y-[1px]
                                   active:scale-[0.98]"
                                    >
                                        Gửi hàng đi Mỹ
                                    </a>
                                </li>
                                <li>
                                    <a
                                        href="/dich-vu/gui-hang-di-uc"
                                        class="group flex items-center rounded-lg px-3 py-2
                                   font-medium text-gray-700
                                   transition-all duration-200 ease-out
                                   hover:bg-hdtBlue hover:text-white
                                   hover:translate-x-[1px] hover:-translate-y-[1px]
                                   active:scale-[0.98]"
                                    >
                                        Gửi hàng đi Úc
                                    </a>
                                </li>
                                <li>
                                    <a
                                        href="/dich-vu/gui-hang-di-canada"
                                        class="group flex items-center rounded-lg px-3 py-2
                                   font-medium text-gray-700
                                   transition-all duration-200 ease-out
                                   hover:bg-hdtBlue hover:text-white
                                   hover:translate-x-[1px] hover:-translate-y-[1px]
                                   active:scale-[0.98]"
                                    >
                                        Gửi hàng đi Canada
                                    </a>
                                </li>
                                <li>
                                    <a
                                        href="/dich-vu/order-hang-trung-quoc"
                                        class="group flex items-center rounded-lg px-3 py-2
                                   font-medium text-gray-700
                                   transition-all duration-200 ease-out
                                   hover:bg-hdtBlue hover:text-white
                                   hover:translate-x-[1px] hover:-translate-y-[1px]
                                   active:scale-[0.98]"
                                    >
                                        Order hàng Trung Quốc
                                    </a>
                                </li>
                            </ul>
                        </div>

                        <!-- GỬI HÀNG THEO KHU VỰC -->
                        <div class="space-y-3 border-l border-gray-500 pl-4">
                            <h4 class="font-semibold text-gray-900">
                                GỬI HÀNG THEO KHU VỰC
                            </h4>

                            <ul class="space-y-1">
                                <li>
                                    <a
                                        href="/dich-vu/gui-hang-di-chau-my"
                                        class="group flex items-center rounded-lg px-3 py-2
                                   font-medium text-gray-700
                                   transition-all duration-200
                                   hover:bg-hdtBlue hover:text-white
                                   hover:translate-x-[1px] hover:-translate-y-[1px]
                                   active:scale-[0.98]"
                                    >
                                        Châu Mỹ
                                    </a>
                                </li>
                                <li>
                                    <a
                                        href="/dich-vu/gui-hang-di-chau-au"
                                        class="group flex items-center rounded-lg px-3 py-2
                                   font-medium text-gray-700
                                   transition-all duration-200
                                   hover:bg-hdtBlue hover:text-white
                                   hover:translate-x-[1px] hover:-translate-y-[1px]
                                   active:scale-[0.98]"
                                    >
                                        Châu Âu
                                    </a>
                                </li>
                                <li>
                                    <a
                                        href="/dich-vu/gui-hang-di-chau-a"
                                        class="group flex items-center rounded-lg px-3 py-2
                                   font-medium text-gray-700
                                   transition-all duration-200
                                   hover:bg-hdtBlue hover:text-white
                                   hover:translate-x-[1px] hover:-translate-y-[1px]
                                   active:scale-[0.98]"
                                    >
                                        Châu Á
                                    </a>
                                </li>
                            </ul>
                        </div>

                        <!-- GỬI VỀ VIỆT NAM -->
                        <div class="space-y-3 border-l border-gray-500 pl-6">
                            <h4 class="font-semibold text-gray-900">
                                GỬI VỀ VIỆT NAM
                            </h4>

                            <ul class="space-y-1">
                                <li>
                                    <a
                                        href="/dich-vu/my-ve-vn"
                                        class="group flex items-center rounded-lg px-3 py-2
                                   font-medium text-gray-700
                                   transition-all duration-200
                                   hover:bg-hdtBlue hover:text-white
                                   hover:translate-x-[1px] hover:-translate-y-[1px]
                                   active:scale-[0.98]"
                                    >
                                        Mỹ → Việt Nam
                                    </a>
                                </li>
                                <li>
                                    <a
                                        href="/dich-vu/eu-ve-vn"
                                        class="group flex items-center rounded-lg px-3 py-2
                                   font-medium text-gray-700
                                   transition-all duration-200
                                   hover:bg-hdtBlue hover:text-white
                                   hover:translate-x-[1px] hover:-translate-y-[1px]
                                   active:scale-[0.98]"
                                    >
                                        EU → Việt Nam
                                    </a>
                                </li>
                                <li>
                                    <a
                                        href="/dich-vu/canada-ve-vn"
                                        class="group flex items-center rounded-lg px-3 py-2
                                   font-medium text-gray-700
                                   transition-all duration-200
                                   hover:bg-hdtBlue hover:text-white
                                   hover:translate-x-[1px] hover:-translate-y-[1px]
                                   active:scale-[0.98]"
                                    >
                                        Canada → Việt Nam
                                    </a>
                                </li>
                            </ul>
                        </div>

                        <!-- Fulfillment -->
                        <div class="space-y-3 border-l border-gray-500 pl-6">
                            <h4 class="font-semibold text-gray-900">
                                FULFILLMENT
                            </h4>

                            <ul class="space-y-1">
                                <li>
                                    <a
                                        href="/dich-vu/fulfillment-uc"
                                        class="group flex items-center rounded-lg px-3 py-2
                                   font-medium text-gray-700
                                   transition-all duration-200
                                   hover:bg-hdtBlue hover:text-white
                                   hover:translate-x-[1px] hover:-translate-y-[1px]
                                   active:scale-[0.98]"
                                    >
                                        Úc
                                    </a>
                                </li>
                                <li>
                                    <a
                                        href="/dich-vu/fulfillment-canada"
                                        class="group flex items-center rounded-lg px-3 py-2
                                   font-medium text-gray-700
                                   transition-all duration-200
                                   hover:bg-hdtBlue hover:text-white
                                   hover:translate-x-[1px] hover:-translate-y-[1px]
                                   active:scale-[0.98]"
                                    >
                                        Canada
                                    </a>
                                </li>
                                <li>
                                    <a
                                        href="/dich-vu/fulfillment-duc"
                                        class="group flex items-center rounded-lg px-3 py-2
                                   font-medium text-gray-700
                                   transition-all duration-200
                                   hover:bg-hdtBlue hover:text-white
                                   hover:translate-x-[1px] hover:-translate-y-[1px]
                                   active:scale-[0.98]"
                                    >
                                        Đức
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="relative group">
                <a
                    href="#"
                    class="flex items-center gap-1 font-semibold text-black hover:text-hdtBlue hover:border-b-2 hover:border-hdtBlue"
                >
                    KIỂM TRA VẬN ĐƠN
                    <svg
                        class="w-4 h-4 transition-transform duration-200 group-hover:rotate-180"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M19 9l-7 7-7-7"></path>
                    </svg>
                </a>

                <div
                    class="absolute left-0 top-full mt-2 w-56
               bg-white border shadow-lg rounded-xl
               opacity-0 invisible group-hover:opacity-100 group-hover:visible
               transition-all duration-200 z-50 p-2"
                >
                    <a
                        href="https://www.dhl.com/vn-en/home/tracking.html"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="group flex items-center rounded-lg px-4 py-2.5
                   font-medium text-gray-700
                   transition-all duration-200 ease-out
                   hover:bg-hdtBlue hover:text-white
                   hover:translate-x-[1px] hover:-translate-y-[1px]
                   active:scale-[0.98]"
                    >
                        Tracking DHL
                    </a>

                    <a
                        href="https://www.ups.com/track?loc=vi_VN&requester=ST/"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="group flex items-center rounded-lg px-4 py-2.5
                   font-medium text-gray-700
                   transition-all duration-200 ease-out
                   hover:bg-hdtBlue hover:text-white
                   hover:translate-x-[1px] hover:-translate-y-[1px]
                   active:scale-[0.98]"
                    >
                        Tracking UPS
                    </a>

                    <a
                        href="https://www.fedex.com/vi-vn/tracking.html"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="group flex items-center rounded-lg px-4 py-2.5
                   font-medium text-gray-700
                   transition-all duration-200 ease-out
                   hover:bg-hdtBlue hover:text-white
                   hover:translate-x-[1px] hover:-translate-y-[1px]
                   active:scale-[0.98]"
                    >
                        Tracking FedEx
                    </a>

                    <a
                        href="https://dpex.com/track-and-trace/"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="group flex items-center rounded-lg px-4 py-2.5
                   font-medium text-gray-700
                   transition-all duration-200 ease-out
                   hover:bg-hdtBlue hover:text-white
                   hover:translate-x-[1px] hover:-translate-y-[1px]
                   active:scale-[0.98]"
                    >
                        Tracking DPEX
                    </a>
                </div>
            </div>

            <!-- Other links -->
            <a href="/tin-tuc" class="text-black hover:text-hdtBlue hover:border-b-2 hover:border-hdtBlue">TIN TỨC</a>
            <a href="/contact" class="text-black hover:text-hdtBlue hover:border-b-2 hover:border-hdtBlue">LIÊN HỆ</a>
        </nav>

        <!-- Mobile button -->
        <div class="md:hidden">
            <button
                x-data
                @click="$dispatch('toggle-mobile')"
                aria-label="menu"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
    </div>
</div>

<!-- Mobile Navigation -->

<script>
    const headerTop = document.getElementById("headerTop");
    const headerMain = document.getElementById("headerMain");

    window.addEventListener("scroll", () => {
        if (window.scrollY === 0) {
            headerTop.classList.remove("-translate-y-full");
            headerMain.style.top = "2rem"; // h-8
        } else {
            headerTop.classList.add("-translate-y-full");
            headerMain.style.top = "0px";
        }
    });
</script>
